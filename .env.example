# OSIRIS Configuration
# Copy to .env and fill in your API keys

# === Required for full functionality ===
# CesiumJS Ion Token (free at https://cesium.com/ion/)
# Backend:
CESIUM_ION_TOKEN=
# Frontend (optional; enables Cesium World Imagery):
VITE_CESIUM_ION_TOKEN=
# Optional: Google Photorealistic 3D Tiles
# Use one of these:
VITE_GOOGLE_3D_TILES_API_KEY=
VITE_ION_GOOGLE_3D_TILES_ASSET_ID=

# === Optional API Keys (feeds degrade gracefully without these) ===
# OpenSky Network (free at https://opensky-network.org)
OPENSKY_USERNAME=
OPENSKY_PASSWORD=

# AISstream.io (free at https://aisstream.io)
AISSTREAM_API_KEY=

# Shodan (free at https://shodan.io)
SHODAN_API_KEY=

# GreyNoise (free community at https://greynoise.io)
GREYNOISE_API_KEY=

# AlienVault OTX (free at https://otx.alienvault.com)
OTX_API_KEY=

# ACLED OAuth (free at https://acleddata.com/api-documentation/getting-started)
ACLED_USERNAME=
ACLED_PASSWORD=
# Optional: use a refresh token instead of username/password
ACLED_REFRESH_TOKEN=

# GDELT (no key needed — public)
# USGS (no key needed — public)
# NASA EONET (no key needed — public)
# NASA FIRMS (no key needed for RSS, API key for custom queries)
NASA_FIRMS_API_KEY=

# === Infrastructure ===
QDRANT_HOST=qdrant
QDRANT_PORT=6333
REDIS_HOST=redis
REDIS_PORT=6379
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# === Embedding Model ===
# Default uses all-MiniLM-L6-v2 (runs locally, no API key needed)
EMBEDDING_MODEL=all-MiniLM-L6-v2
