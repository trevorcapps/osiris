FROM node:20-alpine AS build
WORKDIR /app
COPY package.json .
RUN npm install
COPY . .
ARG VITE_API_URL
ARG VITE_WS_URL
ARG VITE_CESIUM_ION_TOKEN
ARG VITE_GOOGLE_3D_TILES_API_KEY
ARG VITE_ION_GOOGLE_3D_TILES_ASSET_ID
ENV VITE_API_URL=${VITE_API_URL}
ENV VITE_WS_URL=${VITE_WS_URL}
ENV VITE_CESIUM_ION_TOKEN=${VITE_CESIUM_ION_TOKEN}
ENV VITE_GOOGLE_3D_TILES_API_KEY=${VITE_GOOGLE_3D_TILES_API_KEY}
ENV VITE_ION_GOOGLE_3D_TILES_ASSET_ID=${VITE_ION_GOOGLE_3D_TILES_ASSET_ID}
RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
